<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="eu.neclab.iotplatform.iotbroker.embeddediotagent.core" />

	<bean id="embeddedIoTAgent" class="eu.neclab.iotplatform.iotbroker.embeddediotagent.agentcore.IoTAgentCore">
		<property name="registrationHandler" ref="EmbeddedAgentRegistry"></property>
		<property name="iotAgentStorage" ref="EmbeddedAgentStorage"></property>
		<property name="subscriptionHandler" ref="EmbeddedAgentSubscriptionHandler"></property>
	</bean>
</beans>